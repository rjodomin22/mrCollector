{% extends 'base.html.twig' %}

{% block title %}Maker{% endblock %}

{% block body %}
    <h1>Maker</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ maker.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ maker.logo }}</td>
            </tr>
            <tr>
                <th>objeto:</th>
                {% for item in items %}
                    {% if item.show == 1 %}
                        <tr>
                            <td>{{item.name}} - starting Price: {{item.startingPrice}}</td>
                            <td>{{item.picture}} - current Price: {{item.currentPrice}}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_maker_index') }}">back to list</a>

